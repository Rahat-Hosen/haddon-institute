// Prisma generator
generator client {
  provider = "prisma-client-js"
}

// Prisma datasource for MySQL
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String       @id
  email      String       @unique
  courses    Course[]
}

model Course {
  id          Int          @id
  slug        String       @unique
  title       String
  description String
  price       Int
  users       User[]
  Lesson      Lesson[]
}

model Lesson {
  id          Int    @id
  slug        String @unique
  title       String
  description String
  video       String
  content     String
  course      Course @relation(fields: [courseId], references: [id])
  courseId    Int
  
  @@index([courseId])
}

