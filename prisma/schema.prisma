// Prisma generator
generator client {
  provider = "prisma-client-js"
}

// Prisma datasource for MySQL
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id      String   @id @unique
  admin   Boolean  @default(false)
  courses Course[]
}

model Course {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  slug        String   @unique
  title       String
  description String
  author      String
  categories  String
  thumbnail   String?
  price       String
  users       User[]
  Lesson      Lesson[]
  published   Boolean  @default(false)
  capstone    Boolean  @default(false)
}

model Lesson {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  slug        String   @unique
  title       String
  description String
  video       String?
  blocks      Json[]
  markdown    String?
  length      String? // number of estimated hours/minutes for lesson
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    Int
  published   Boolean  @default(false)

  @@index([courseId])
}
